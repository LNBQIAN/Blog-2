@using MyBlog.Common
@using MyBlog.Model
@model List<MyBlog.Model.ArticleInfo>
@{
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="am-u-md-8">
    @{
        if (Model.Count <= 0)
        {
            <div>
                <img class="am-animation-spin am-animation-delay-1 am-img-responsive" src="~/Content/Image/sorry.gif"/>
            </div>
            <script>
                $(function() {
                    layer.msg("Sorry,没有找到搜索内容");
                });
            </script>
        }
        else
        {
            foreach (ArticleInfo articleInfo in Model)
            {
                <article class="blog-main">
                    <h3 class="am-article-title blog-title">
                        <a href="@Url.Action("Detial", "ArticleInfo")?id=@articleInfo.Id">@articleInfo.ArticleTitle</a>
                    </h3>
                    <h4 class="am-article-meta blog-meta">by <a href="">@articleInfo.UserInfo.UNickName</a> posted on @articleInfo.PubTime.ToString() under <a href="#">@articleInfo.ArticleType.Title</a></h4>
                    <h4 class="am-article-meta blog-meta">阅读量:<a href="javascript:void(0);">@articleInfo.ReadCount</a></h4>
                    <div class="am-g blog-content">
                        <div class="am-u-lg-7">
                            @MyHtml.StripHTML(articleInfo.ArticleContent)
                        </div>
                        <div class="am-u-lg-5">
                            <p>
                                <img class="am-img-responsive" src="@articleInfo.FacePhoto">
                            </p>
                        </div>
                    </div>
                </article>
                <hr class="am-article-divider blog-hr">
            }
            <ul id="pageBarUl" class="am-pagination blog-pagination">@Html.Raw(ViewBag.pageBar)</ul>
        }
    }
</div>
@{
    Html.RenderAction("GetRightView", "Home");
}

